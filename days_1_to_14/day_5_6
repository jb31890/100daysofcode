#day 5
# random.shuffle() will shuffle a list

student_heights = [4, 54, 32, 62, 322, 535]
total = 0
count = 0
for height in student_heights:
    total += height
    count += 1
    
average = round(total/count, 2)
print(f"Average height is {average}")

#fizz buzz

for i in range(1,101):
    if (i % 3 == 0) and (i % 5 == 0):
        print("FizzBuzz")
    elif i % 3 == 0:
        print("Fizz")
    elif i % 5 == 0:
        print("Buzz")
    else:
        print(i)