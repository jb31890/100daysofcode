def greet():
    print("Welcome Entity!")
    print("This is my encyption system.")
    print("Tread carefully, dear friend.")
    
greet()

#paint area calculator
def paint_calc(height, width, coverage):
    return round(((height * width) / coverage))

test_h = int(input("height: "))
test_w = int(input("width: "))
coverage = 5
paint_calc(height=test_h, width=test_w, coverage=coverage)

#prime # calc
def prime_checker(number):
    for i in range(2,number):
        if number % i == 0:
            print(f"not a prime: {number} divisible by {i}")
            return

    print(f"winner winner prime number dinner: {number}")
    
n = int(input("enter number for prime check: "))
prime_checker(number=n)

alphabet = ['a', 'b', 'c', 'd', 'e', 'f', 'g', 'h', 'i', 'j', 'k', 'l', 'm', 'n', 'o', 'p', 'q', 'r', 's', 't', 'u', 'v', 'w', 'x', 'y', 'z']
logo = """           
