def encrypt(plain_text, shift_amount):
    cipher = ""
    for i, letter in enumerate(plain_text):
        cipher += (alphabet[(alphabet.index(letter)+ shift_amount) % len(alphabet)])
        #print(alphabet[(alphabet.index(letter)+ shift) % len(alphabet)])
    print(f"Your encrypted message is: {cipher}")

def decrypt(cipher_text, shift_amount):
    plain = ""
    for i, letter in enumerate(cipher_text):
        plain += (alphabet[(alphabet.index(letter)- shift_amount) % len(alphabet)])
        #print(alphabet[(alphabet.index(letter)+ shift) % len(alphabet)])
    print(f"Your decrypted message is: {plain}")
    
#    if direction == "encode":
#        encrypt(text, shift)
#    elif direction == "decode":
#        decrypt(text, shift)
    
def caesar(code, input_text, shift_amt):
    output = ""
    if code == "decode":
        shift_amt *= -1
    for i, letter in enumerate(input_text):
        if letter.isalpha():
            output += (alphabet[(alphabet.index(letter)+ shift_amt) % len(alphabet)])
        else:
            output += letter
    print(f"Your message is: {output}")
    
def get_direction():
    direction = input("Type 'encode' to encrypt, type 'decode' to decrypt:\n") 
    if direction == "encode" or direction == "decode":
        return direction
    else:
        print("Please enter 'encode' or 'decode'")
        get_direction()


#print(encrypt(text, shift))
#print(decrypt(text, shift))

loop = True
print(logo)
while loop:
    direction = get_direction() 
    text = input("Type your message:\n").lower()
    shift = int(input("Type the shift number:\n"))
    caesar(direction,text,shift)
   
    again = input("Would you like to go again? y/n\n")
    if again[0].lower() == "y":
        continue
    else:
        loop = False

